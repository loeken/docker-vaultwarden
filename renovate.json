{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "prConcurrentLimit": 0,
  "branchConcurrentLimit": 0,
  "prHourlyLimit": 0,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [".github/workflows/release.yml"],
      "matchStrings": [
        "tags:\\s*dani-garcia/vaultwarden:(?<currentValue>[\\d\\.]+)",
        "COMMIT_TAG=(?<currentValue>[\\d\\.]+)"
      ],
      "datasourceTemplate": "github-releases",
      "packageNameTemplate": "dani-garcia/vaultwarden",
      "versioningTemplate": "semver",
      "replaceStringTemplate": "tags: loeken/vaultwarden:{{newValue}}-alpine\n            COMMIT_TAG={{newValue}}-alpine"
    }
  ],
  "pinDigests": true
}
